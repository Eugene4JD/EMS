<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="394.0" prefWidth="305.0"
      userData="addRoom" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.AddRoomController">
    <children>
        <HBox prefHeight="59.0" prefWidth="466.0"
              style="-fx-background-color: #FAFAFA;">
            <children>
                <ImageView fitHeight="37.0" fitWidth="35.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@room.png"/>
                    </image>
                    <HBox.margin>
                        <Insets left="40.0" top="13.0"/>
                    </HBox.margin>
                </ImageView>
                <Label alignment="CENTER_RIGHT" prefHeight="30.0"
                       prefWidth="163.0" text="Adding a room">
                    <font>
                        <Font name="System Bold" size="20.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="19.0" top="15.0"/>
                    </HBox.margin>
                </Label>
            </children>
        </HBox>
        <HBox prefHeight="43.0" prefWidth="390.0">
            <children>
                <Label alignment="CENTER_RIGHT" prefHeight="26.0"
                       prefWidth="64.0" text="Name:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="30.0" top="6.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="nameTextField">
                    <HBox.margin>
                        <Insets left="15.0" top="7.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox prefHeight="43.0" prefWidth="390.0">
            <children>
                <Label alignment="CENTER_RIGHT" prefHeight="26.0"
                       prefWidth="86.0" text="Connectors:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="8.0" top="6.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="connectorsTextField">
                    <HBox.margin>
                        <Insets left="15.0" top="7.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox prefHeight="43.0" prefWidth="390.0">
            <children>
                <Label alignment="CENTER_RIGHT" prefHeight="26.0"
                       prefWidth="84.0" text="MAX Students:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" top="6.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="maxStudentsTextField">
                    <HBox.margin>
                        <Insets left="15.0" top="7.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox prefHeight="43.0" prefWidth="390.0">
            <children>
                <Label alignment="CENTER_RIGHT" prefHeight="26.0"
                       prefWidth="86.0" text="Chairs:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="8.0" top="6.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="chairsTextField">
                    <HBox.margin>
                        <Insets left="15.0" top="7.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox prefHeight="43.0" prefWidth="390.0">
            <children>
                <Label alignment="CENTER_RIGHT" prefHeight="26.0"
                       prefWidth="86.0" text="Tables:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="8.0" top="6.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="teachersTextField">
                    <HBox.margin>
                        <Insets left="15.0" top="7.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox prefHeight="43.0" prefWidth="390.0">
            <children>
                <Label alignment="CENTER_RIGHT" prefHeight="26.0"
                       prefWidth="86.0" text="Mergeable:">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <HBox.margin>
                        <Insets left="8.0" top="6.0"/>
                    </HBox.margin>
                </Label>
                <CheckBox alignment="CENTER" mnemonicParsing="false"
                          prefHeight="22.0" prefWidth="130.0"
                          text="(Check mark if YES)" fx:id="mergeableCheckBox">
                    <HBox.margin>
                        <Insets left="25.0" top="9.0"/>
                    </HBox.margin>
                </CheckBox>
            </children>
        </HBox>
        <HBox prefHeight="37.0" prefWidth="276.0">
            <children>
                <Label fx:id="errorLabel" alignment="CENTER" prefHeight="18.0"
                       prefWidth="148.0" textFill="RED">
                    <HBox.margin>
                        <Insets left="10.0" top="3.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="System Italic" size="10.0"/>
                    </font>
                </Label>
                <Button mnemonicParsing="false"
                        onAction="#addStudentButtonPressed" text="Add">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#cancelButtonPressed"
                        text="Cancel">
                    <HBox.margin>
                        <Insets left="5.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
